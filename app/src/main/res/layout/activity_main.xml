<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:title="Mod Bus"

        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="#ffffff"></android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:text="IP :"
        android:layout_below="@+id/toolbar"
        android:gravity="center_vertical"
        android:id="@+id/lblip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:text="Port :"

        android:gravity="center_vertical"
        android:id="@+id/lblport"
        android:layout_below="@+id/lblip"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:id="@+id/textIp"
        android:text="192.168.0.103"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/lblip"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:id="@+id/textPort"
        android:text="502"
        android:layout_below="@+id/textIp"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/lblport"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:text="Address :"
        android:gravity="center_vertical"
        android:id="@+id/lbladdress"
        android:layout_below="@+id/lblport"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:id="@+id/textaddress"
        android:text="12889"
        android:layout_below="@+id/textPort"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/lblport"
          />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:layout_toRightOf="@+id/textaddress"
        android:text="Slave :"
        android:gravity="center_vertical"
        android:id="@+id/lblSlav"
        android:layout_below="@+id/lblport"
      />

    <EditText
        android:layout_width="100dip"
        android:layout_height="50dip"

        android:id="@+id/textslave"
        android:text="1"
        android:layout_below="@+id/textPort"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/lblSlav"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:text="length :"
        android:layout_toRightOf="@+id/textPort"
        android:gravity="center_vertical"
        android:id="@+id/lbllegth"
        android:layout_below="@+id/textIp"
         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dip"
        android:id="@+id/textlength"
        android:text="98"
        android:layout_below="@+id/textIp"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@+id/lbllegth"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:id="@+id/connectBtn"
        android:layout_below="@+id/textaddress"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/registerListView"
        android:layout_below="@+id/connectBtn"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
